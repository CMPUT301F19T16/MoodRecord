<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sentimo.LoginActivity"
    android:background="@drawable/image01"
    android:orientation="vertical">
    <LinearLayout
        android:paddingTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextViewLoginScreen"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Sentimo"
            android:textAllCaps="false"
            android:textColor="#E95384"
            android:textSize="60sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal"
            android:text="Celebrate your Sentiments with Sentimo"
            android:textAllCaps="false"
            android:textColor="#1A1A1B"
            android:textSize="20sp"
            android:textStyle="italic|bold" />

        <EditText
            android:id="@+id/Username_LS_editText"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/logintextstyle"
            android:backgroundTint="#819C27B0"
            android:gravity="left"
            android:hint="UserName"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Password_LS_editText"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/logintextstyle"
            android:backgroundTint="#859C27B0"
            android:gravity="left"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#fff"
            android:textColorHint="#fff" />
        <Button
            android:background="@drawable/buttonstyleselector"
            android:textColor="#fff"
            android:id="@+id/button_login"
            android:layout_marginTop="10dp"
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:text="Login" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Join the Sentimo family"
            android:textAllCaps="false"
            android:textColor="#1A1A1B"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/button_sign_upLoginScreen"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonstyleselector"
            android:text="Sign-Up"
            android:textColor="#fff" />



    </LinearLayout>
</ScrollView>

