<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="#54B0E96F"
            android:fontFamily="casual"
            android:gravity="center_horizontal"
            android:text="    Happy   "
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#8BC34A"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/filter_happy_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textAlignment="center"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/happy">
        </Button>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#666274DB"
            android:fontFamily="casual"
            android:gravity="center_horizontal"
            android:text="     Sad   "
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#3F51B5"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/filter_sad_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textAlignment="center"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/sad">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#85B93226"
            android:fontFamily="casual"
            android:layout_marginLeft="4dp"
            android:gravity="center_horizontal"
            android:text="     Mad      "
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#8D2017"
            android:textStyle="bold" />

        <Button
            android:id="@+id/filter_mad_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textAlignment="center"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/mad">
        </Button>


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#85DD5A50"
            android:fontFamily="casual"
            android:gravity="center_horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="  Loved "
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#F81C0C"
            android:textStyle="bold" />

        <Button
            android:id="@+id/filter_loved_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textAlignment="center"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/loved">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#41E91E63"
            android:fontFamily="casual"
            android:gravity="center_horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginLeft="4dp"
            android:text="Embarrassed"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#F11E63"
            android:textStyle="bold" />

        <Button
            android:id="@+id/filter_embarrassed_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textAlignment="center"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/embarrased">
        </Button>


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#660F0F0F"
            android:fontFamily="casual"
            android:gravity="center_horizontal"
            android:text="   Tired  "
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#241F1F"
            android:textStyle="bold" />

        <Button
            android:id="@+id/filter_tired_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textAlignment="center"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/tired">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#51FFEB3B"
            android:fontFamily="casual"
            android:gravity="center_horizontal"
            android:text="  Confident "
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginLeft="4dp"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#F8E207"
            android:textStyle="bold" />

        <Button
            android:id="@+id/filter_confident_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textAlignment="center"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/confident">
        </Button>


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#572196F3"
            android:fontFamily="casual"
            android:gravity="center_horizontal"
            android:text=" Worried "
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#00BCD4"
            android:textStyle="bold" />

        <Button
            android:id="@+id/filter_worried_button"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:textAlignment="center"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/worried">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="casual"
            android:paddingTop="10dp"
            android:layout_marginTop="20dp"
            android:gravity="bottom|center_horizontal|top"
            android:text="View All:   "
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textStyle="bold"></TextView>

        <Button
            android:id="@+id/filter_all_button"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:fontFamily="casual"
            android:text="ALL"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"></Button>
    </LinearLayout>

</LinearLayout>
